{% extends "TdSMuseeBundle::layout.html.twig" %}



{% block body %}


	<section class="section center section-edition mw8 pv5 cf">
		<h2 class="baskerville ttu fw1 f3 tc">Les Editions du Musée</h2>
		<ul class="edition_liste list pa0">
			{% for edition in editionsListe %}
				<li class="edition_item w-100 pa2-ns">
					<a class="db w-100 link ba b--black-20 pa2" href="{{ path('tds_musee_edition_view', {'id': edition.id}) }} ">
						<div class="dtc w-40">
							<div class="edition_image w-100 db">
								{% if edition.image is not null %}
									{% set foo %}
					     				{% path edition.image, 'big' %}
									{% endset %}
									<img src="{{ foo }}" alt="" style="background-image:url({{ foo }});" class="db w-100" />				
								{% endif %}
							</div>
						</div>
						<div class="dtc w-60 v-top pl3">
							<h2 class="fw2 f5 mb0 pb0 lh-title">{{ edition.titre }}</h2>
							<h4 class="fw2 f5 mb0 pb0 lh-title">Catégorie : {{ edition.categorie }}</h4>
							<span class="fw2 f5 mb0 pb0 lh-title">Prix : {{ edition.prix }}</h4>
							<i class="db f7 fw4 mt2 black-60 pb2">Parution : {{ edition.dateParution|date('d/m/Y à H:s') }}</i>
							<p class="f6">{{ edition.description|truncate(200, true) }} ...</p>
						</div>
					</a>
				</li>
			{% endfor %}
		</ul>
		
	</section>

{% endblock %}